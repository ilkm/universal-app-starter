  "devDependencies": {
    "clsx": "^2.1.1",
    "prettier": "^3.3.2",
    "tailwind-merge": "^2.5.2",
    "turbo": "^2.0.4"
  },
  "resolutions": {
    "react": "^19.0.0",
    "react-native": "^0.79.2",
    "react-native-web": "~0.20.0",
    "tailwindcss": "^3.4.1"
  }
}
